{
  "manifest_version": 2,
  "name": "__MSG_name__",
  "version": "2.1.0.0",

  "default_locale": "en",
  "description": "Converts monetary amounts from any currency ($, Â£, etc.) to monetary amounts in a selectable currency automatically while browsing.",
  "icons": {
    "16": "images/1402781551_currency_exchange_1.png",
    "48": "images/1415072079_currency_exchange_1-48.png",
    "128": "images/1415072098_currency_exchange_1-128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "images/1415072771_currency_exchange_1-20.png",
      "38": "images/1415072079_currency_exchange_1-48.png"
    },
    "default_title": "__MSG_buttontitle__"
  },

  "author": "Per Johansson",
  "background": {
    "scripts": [
      "dcc-common-lib/eventAggregator.js",
      "gc-freegeoip-service.js",
      "dcc-common-lib/freegeoip-service.js",
      "gc-yahoo-quotes-service.js",
      "dcc-common-lib/yahoo-quotes.js",
      "gc-storage-service.js",
      "dcc-common-lib/informationHolder.js",
      "dcc-common-lib/contentScriptParams.js",
      "dcc-common-lib/parseContentScriptParams.js",
      "gc-l10n.js",
      "gc-contentInterface.js",
      "gc-chromeInterface.js",
      "gc-main.js"],
    "persistent": false
  },
  "options_page": "settings.html",
  "permissions": [
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "short_name": "DC Converter"
}
