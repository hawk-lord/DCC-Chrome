{
  "manifest_version": 2,

  "name": "DCC-Chrome",
  "version": "0.0.1",

  "icons": {
      "16": "images/1402781551_currency_exchange_1.png",
      "48": "images/1415072079_currency_exchange_1-48.png",
      "128": "images/1415072098_currency_exchange_1-128.png"
  },

  "permissions": [
      "tabs",
      "storage",
      "*://*/"
  ],
  "background": {
      "scripts": ["grep.js", "urlProvider.js", "background.js"],
      "persistent": false
  },
  "browser_action": {
      "default_icon": {
          "19": "images/1415072771_currency_exchange_1-20.png",
          "38": "images/1415072079_currency_exchange_1-48.png"
      },
      "default_title": "Toggle Conversion"
  },
  "options_page": "settings.html"
}
